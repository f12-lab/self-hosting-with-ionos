<icecast>
    <!-- Información de localización y administración -->
    <location>Earth</location>
    <admin>icemaster@localhost</admin>

    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <!-- Contraseñas de autenticación para el origen y la administración -->
        <source-password>seven</source-password>
        <relay-password>seven</relay-password>
        <admin-user>Seven</admin-user>
        <admin-password>7</admin-password>
    </authentication>

    <hostname>localhost</hostname>

    <!-- Configuración de los sockets de escucha -->
    <listen-socket>
        <port>8000</port>
        <bind-address>0.0.0.0</bind-address>
    </listen-socket>

    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*" />
    </http-headers>

    <fileserve>1</fileserve>

    <!-- Rutas de archivos y directorios -->
    <paths>
        <basedir>/usr/share/icecast2</basedir>
        <logdir>/var/log/icecast2</logdir>
        <webroot>/usr/share/icecast2/web</webroot>
        <adminroot>/usr/share/icecast2/admin</adminroot>
    </paths>

    <!-- Configuración de logging -->
    <logging>
        <accesslog>/var/log/icecast2/access.log</accesslog>
        <errorlog>/var/log/icecast2/error.log</errorlog>
        <loglevel>3</loglevel> <!-- 3 = Info, 4 = Debug, etc. -->
        <logsize>10000</logsize>
    </logging>

    <!-- Configuración de seguridad -->
    <security>
        <chroot>0</chroot>
        <changeowner>
            <user>root</user>
            <group>root</group>
        </changeowner>
    </security>
</icecast>
